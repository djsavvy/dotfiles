[module/lock]
type = custom/text
content = "%{F#259E83}Ó¢ô %{F-}Lock"
click-left = "pkill -n polybar ; sh ~/.config/i3/Lock.sh"


[module/suspend]
type = custom/text
content = "%{F#259E83}Óóõ %{F-}Suspend"
click-left = "pkill -n polybar ; sh ~/.config/i3/Lock.sh && systemctl suspend"


[module/logout]
type = custom/text
content = "%{F#259E83}ÓóÑ %{F-}Logout"
click-left = "pkill -n polybar ; i3-msg exit"


[module/reboot]
type = custom/text
content = "%{F#259E83}Óóï %{F-}Reboot"
click-left = "pkill -n polybar ; systemctl reboot"


[module/poweroff]
type = custom/text
content = "%{F#259E83}Ó¢¨ %{F-}Poweroff"
click-left = "pkill -n polybar ; systemctl poweroff"



[module/closepowermenubar]
type = custom/text
content = "%{F#259E83}Óóç %{F-}Cancel"
click-left = "pkill -n polybar"




