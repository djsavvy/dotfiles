[module/pavolume]
type = custom/script
tail = true
label = " %output% "
exec = ~/.config/polybar/pavolume.sh --listen
click-left = amixer sset Master toggle
click-right = exec pavucontrol &
; scroll-down = amixer sset Master 2%-
; scroll-up = amixer sset Master 2%+
scroll-down = pactl set-sink-volume @DEFAULT_SINK@ -2%
scroll-up = pactl set-sink-volume @DEFAULT_SINK@ +2%
 


[module/bluetooth]
type = custom/script
interval = 1
exec = ~/.config/polybar/bluetooth.sh
label = "  %output% "
click-left = blueberry
click-right = ~/.config/polybar/bluetooth.sh --toggle



[module/music]
type = custom/script
interval = 1 
label = %{T4}%output:0:90:...%%{T-}
tail = true
exec = ~/.config/polybar/mpris.sh
click-left = ~/.config/polybar/musicWorkspaceSwitcher.sh



[module/playpause]
type = custom/script
label = %output%
tail = false
interval = 1
exec = ~/.config/polybar/playpause.sh
click-left = playerctl play-pause



[module/nextsong]
type = custom/text
content = "%{F#1d95cd}ÓÅÑ"
click-left = playerctl next



[module/prevsong]
type = custom/text
content = "%{F#1998c9}ÓÅÖ"
click-left = playerctl previous




[module/redshift]
type = custom/script
tail = true
label = "%output%   "
exec = ~/.config/polybar/redshift.sh
click-left = redshift -c ~/.config/redshift.conf &
click-right = redshift -x && pkill -9 redshift &



